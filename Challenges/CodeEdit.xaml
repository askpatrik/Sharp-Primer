<Window x:Class="Sharp_Primer.Challenges.CodeEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    Title="Code Editor">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter your code here:" Margin="10"/>
        <avalonEdit:TextEditor x:Name="CodeEditor" Grid.Row="1" Margin="10"
                               FontFamily="Consolas" FontSize="14"
                               SyntaxHighlighting="C#"
                               VerticalScrollBarVisibility="Visible"
                               HorizontalScrollBarVisibility="Visible"/>
        <Button Content="Run Code" Grid.Row="2" Margin="10" Click="RunCode_Click"/>
    </Grid>
</Window>