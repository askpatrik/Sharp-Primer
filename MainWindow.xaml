<Window x:Class="Sharp_Primer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sharp_Primer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
       <TextBlock Text="Welcome to Sharp Primer!" 
           FontSize="24" 
           FontWeight="Bold"           
           HorizontalAlignment="Center" 
           VerticalAlignment="Center"/>

           <Button x:Name="loginButton" Content="Log In" HorizontalAlignment="Right" Margin="0,10,10,0" 
           VerticalAlignment="Top" Width="150" Height="50" FontSize="20" Background="#2196F3" Foreground="White" 
           BorderBrush="#2196F3" BorderThickness="2" Click="LoginButton_Click"/>

    </Grid>
    
        
</Window>